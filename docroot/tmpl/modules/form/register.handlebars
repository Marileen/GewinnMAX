<div class="register" data-module="form/register">

    <form class="form controller" data-module="form" data-controller="fragments/Form" action="#register-1" method="POST" data-inline-validation="true" data-validate-onload="true" data-scrolltop-on-error="true" data-stop-submit-on-enter="true">

        <div class="textblock" data-fragment="textblock">
            <hgroup>
                <h3>{{headline}}</h3>
            </hgroup>
            <div class="content">
                {{{description}}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if taetigkeit.message.show}}has-{{taetigkeit.message.type}}{{/if}}">
                {{>fragments/form/select taetigkeit}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group ">

                <div class="select">
                    <label for="fieldOfActivity">
                        <div class="label">Tätigkeitsfeld *</div>
                        <div data-type="select" data-controller="fragments/form/Select" class="field controller">
                            <select name="fieldOfActivity" id="fieldOfActivity" class="form-control" required>
                                <option value="">** Bitte wählen **</option>
                                <option value="distributionArchitect">ArchitektPlaner</option>
                                <option value="distributionMetalworker">Metallbauer</option>
                            </select>
                        </div>
                        <div data-fragment="message" class="message success">
                            <div class="icon"></div>
                            <div class="text"></div>
                        </div>
                        <div data-fragment="message" class="message error ">
                            <div class="icon"></div>
                            <div class="text">
                                <p>Bitte ein Tätigkeitsfeld auswählen</p>
                            </div>
                        </div>
                    </label>
                </div>
            </div>
        </div>

        <div class="form-row">
            {{#unless email.locked}}
            <div class="form-group">
                {{>fragments/form/input email}}
            </div>
            {{else}}
                <p>{{email.label}}</p>
                <p><strong>max@mustermann.de</strong></p>
            {{/unless}}
        </div>

        <div class="form-row border-top">
            <div class="form-group {{#if anrede.message.show}}has-{{anrede.message.type}}{{/if}}">
                {{>fragments/form/radio anrede}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if vorname.message.show}}has-{{vorname.message.type}}{{/if}}">
                {{>fragments/form/input vorname}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if nachname.message.show}}has-{{nachname.message.type}}{{/if}}">
                {{>fragments/form/input nachname}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if firma.message.show}}has-{{firma.message.type}}{{/if}}">
                {{>fragments/form/input firma}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if kundennummer.message.show}}has-{{kundennummer.message.type}}{{/if}}">
                {{>fragments/form/input kundennummer}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if strasse.message.show}}has-{{strasse.message.type}}{{/if}}">
                {{>fragments/form/input strasse}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if plz.message.show}}has-{{plz.message.type}}{{/if}} {{#if ort.message.show}}has-{{ort.message.type}}{{/if}}">
                <div class="col-md-2">
                    {{>fragments/form/input plz}}
                </div>
                <div class="col-md-10 with-message">
                    {{>fragments/form/input ort}}
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if land.message.show}}has-{{land.message.type}}{{/if}}">
                {{>fragments/form/select land}}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group {{#if telefonnummer.message.show}}has-{{telefonnummer.message.type}}{{/if}}">
                {{>fragments/form/input telefonnummer}}
            </div>
        </div>


        <div class="form-row border-top">
            <div class="form-group ">

                <div class="input">
                    <label for="password" class="label">Passwort&nbsp;*</label>
                    <div class="field">
                        <input
                                type="password"
                                class="form-control"
                                name="password"
                                id="password"
                                placeholder="Passwort"
                                value=""
                                required
                                data-equal="#passwordConfirm" data-valid-on-keypress="true"
                                >
                    </div>
                    <div data-fragment="message" class="message success">
                        <div class="icon"></div>
                        <div class="text">
                        </div>
                    </div>
                    <div data-fragment="message" class="message error ">
                        <div class="icon"></div>
                        <div class="text">
                            <p>Bitte geben Sie ein Password an</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="form-row">
            <div class="form-group ">

                <div class="input">
                    <label for="passwordConfirm" class="label">Passwort bestätigen&nbsp;*</label>
                    <div class="field">
                        <input
                                type="password"
                                class="form-control"
                                name="passwordConfirm"
                                id="passwordConfirm"
                                placeholder="Passwort bestätigen"
                                value=""
                                required
                                data-equal="#password" data-valid-on-keypress="true"
                                >
                    </div>
                    <div data-fragment="message" class="message success">
                        <div class="icon"></div>
                        <div class="text">
                        </div>
                    </div>
                    <div data-fragment="message" class="message error ">
                        <div class="icon"></div>
                        <div class="text">
                            <p>Bitte bestätigen Sie Ihr Passwort</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>



        {{#if passwortText}}
        <div class="form-row border-top">
            <div class="textblock" data-fragment="textblock">
                <div class="content">
                    {{{passwortText}}}
                </div>
            </div>
        </div>
        {{/if}}

        {{#if captcha}}
        <div class="form-row border-top">
            <div class="form-group {{#if captcha.message.show}}has-{{captcha.message.type}}{{/if}}">
                {{>fragments/form/captcha captcha}}
            </div>
        </div>
        {{/if}}

        {{#if agb}}
        <div class="form-row border-top">
            <div class="form-group {{#if agb.message.show}}has-{{agb.message.type}}{{/if}}">
                {{>fragments/form/checkbox agb}}
            </div>
        </div>
        {{/if}}

        <div class="form-row button-row">
            <div class="form-group">
                <button class="btn form-link left" type="reset" value="reset">Formular zurücksetzen</button>
                <button class="btn btn-blue right" type="submit" value="submit">{{weiter}}</button>
            </div>
        </div>

    </form>

</div>
